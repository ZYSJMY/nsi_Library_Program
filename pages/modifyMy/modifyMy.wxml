<!--pages/modifyMy.wxml-->
 <view class="modifyMy">
    <view class="title">完善用户信息</view>
    <view class="modifyMy-portrait">
      <text>邮箱</text>
      <input type="text" value="{{username}}" placeholder="请输入邮箱" bindblur="username"></input>
    </view>
    <view class="modifyMy-portrait">
      <text>真实姓名</text>
      <input type="text" value="{{userTurename}}" placeholder="请输入真实姓名" bindinput="userTurename" maxlength="10"></input>
    </view>
    <view class="modifyMy-portrait">
      <text>公司</text>
      <input type="text" value="{{userOrganization}}" placeholder="请输入公司" bindinput="userOrganization" maxlength="20"></input>
    </view>
    <view class="modifyMy-portrait">
      <text>职位</text>
      <input type="text" value="{{userPosition}}" placeholder="请输入职位" bindinput="userPosition" maxlength="20"></input>
    </view>
    <view class="modifyMy-portrait">
      <text>电话</text>
      <input type="number" value="{{userPhone}}" placeholder="请输入电话" bindblur="userPhone"  maxlength="11"></input>
    </view>
    
    <view class="btn" bindtap="submission">
      确认注册
    </view>
  </view>