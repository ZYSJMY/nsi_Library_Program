/* login.wxss */
image{
  display: block;
  margin: 70px auto;
  opacity: 0.4;
  width: 190px;
  height: 140px;
}
button{
  min-height: 40px;
  width: 184px;
  margin-left: auto;
  margin-right: auto;
  padding: 8px 24px;
  line-height: 1.41176471;
  border-radius: 4px;
  font-weight: 700;
  font-size: 17px;
}
button[type=primary] {
  background-color: #07c160;
}
.explain{
  text-align: center;
  margin: 30px 0; 
  color: rgb(168, 168, 168);
}
.noLogin{
  color:rgb(168, 168, 168) !important;
  margin-top:20px !important;
}
button[type='default'] {
  color: #06ae56;
  background-color: #f2f2f2;
}
button::after {
  display: none;
}